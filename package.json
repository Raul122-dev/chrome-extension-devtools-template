{
  "name": "chrome-extension-devtools-template",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A template for Chrome DevTools extensions with Vite, TypeScript, and React",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "watch": "vite build --watch",
    "zip": "npm run build && node scripts/zip.mjs"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.3",
    "@types/chrome": "^0.1.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.5"
  }
}
