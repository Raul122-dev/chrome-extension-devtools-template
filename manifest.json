{
  "name": "chrome-extension-devtools-template",
  "description": "DevTools panel con React + TS",
  "version": "0.1.0",
  "manifest_version": 3,

  "devtools_page": "public/devtools.html",

  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },

  "permissions": ["storage", "scripting", "tabs", "activeTab"],
  "host_permissions": ["<all_urls>"],

  "action": {
    "default_icon": { "32": "public/icon-32.png" }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "public/icon-16.png",
    "32": "public/icon-32.png",
    "128": "public/icon-128.png"
  }
}
